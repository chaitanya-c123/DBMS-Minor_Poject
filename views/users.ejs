<!DOCTYPE html>
<html leng="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
        <title>Vehicle list</title>
     <link rel="stylesheet" href="style.css">
    </head>
    <body>
      <h1>User details</h1>
      <div class="box" id="heading">
         <div>
          <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Email/th>
              <th scope="col">Name</th>
              <th scope="col">Adress</th>
              <th scope="col">Phone Number</th>
              <th scope="col">Model Name</th>
              <th scope="col">carNumber</th>
              <th scope="col">Arrival Date</th>
              <th scope="col">Return Date</th>
              <th scope="col">Total Price</th>
            </tr>
          </thead>
          <% for(var i=0;i<newListItems.length;i++){ %>
            <div class="item">
                    <tbody>
                      <tr>
                        <th scope="row"><%=i+1%></th>
                        <td><%=newListItems[i].userEmail%></td>
                        <td><%=newListItems[i].userName%></td>
                        <td><%=newListItems[i].userAddress%></td>
                        <td><%=newListItems[i].userPhonenumber%></td>
                        <td><%=newListItems[i].modelName%></td>
                        <td><%=newListItems[i].carNumber%></td>
                        <td><%=newListItems[i].arrivalDate%></td>
                        <td><%=newListItems[i].returnDate%></td>
                        <td><%=newListItems[i].totPrice%></td>
                       <% if(newListItems[i].status==="Pending"){%>
                        <td><form action="/statusAccept" method="post"><button name="accept" value="<%=newListItems[i]._id%>">Accept</button></form></td>
                        <td><form action="/statusDeny" method="post"><button name="deny" value="<%=newListItems[i]._id%>">Deny</button></form></td>
                        <%}%>
                        <%if(newListItems[i].status==="Accepted"){%>
                          <td><form action="/statusAccept" method="post"><button name="accept" value="<%=newListItems[i]._id%>">Accepted</button></form></td>
                        <%}%>
                        <%if(newListItems[i].status==="Denied"){%>
                          <td><form action="/statusDeny" method="post"><button name="deny" value="<%=newListItems[i]._id%>">Denied</button></form></td>
                        <%}%>
                        <td><form action="/addBack" method="post"><button name="number" value="<%=newListItems[i].carNumber%>">Add back</button></form></td>
                      </tr>
                  </div>
     <%} %>
    </table>
    </body>
</html>