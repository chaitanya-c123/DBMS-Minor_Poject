<%- include('partials/header') %>
            <br>
            <form action="/back/queryPage" method="post">
                <div class="text-left ">
                  <button type="submit" name="signout"  class="signout btn btn-success"><b><--BACK</b></button></div>
                </form> 
             <br>
        <h1 class="heading border">CUSTOMER QUERIES</h1>
            <br>
         
    <div class="box container">
        <table class="table table-hover">
        <thead class="table-head">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Query</th>
            <th scope="col">Reply</th>
          </tr>
        </thead>
        <% var i=0;%>
        <%queries.forEach(function(query){%>
            <% i=i+1;%>
          <div class="item">
                  <tbody>
                    <tr>
                      <th scope="row"><%=i+1%></th>
                      <td><b><%=query.username%></b></td>
                      <td><b><%=query.queryContent%></b></td>
                      <td> <form class="text-start" action="/queryReply" method="post">
                        <% if(query.reply===""){%>
                        <textarea name="queryBody" class="form-control" cols="5" rows="2" placeholder="Reply"></textarea>
                        <button type="submit" class="btn-red" name="queryId" value="<%=query._id%>">Submit</button></form>
                        <%}else{%>
                            <%=query.reply%>
                        <%}%>
                   </td>
                      
                    </tr>
               
                 
        </div>
   <%}); %>
  </table>
</section>

