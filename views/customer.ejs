      <div id="customerimg" class="container-fluid">
        <h1 class="main-text">Welcome</h1>
      </div>
      <br><br>
      <div class="container">
        <form action="/click/<%=user%>" method="post">
        <div class="box border" id="heading">
          <br>
          <h1 class="text-center heading">VEHICLES AVAILABLE</h1>
        </div>
      <input type="text" readonly class="form-control-plaintext" id="userId" style="color:white" name="user" value="<%=user%>">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4"><b>Arrival Date</b></label>
              <input  type="string" class="form-control" name="arrdate"  placeholder="DD/MM/YYYY" required="true">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4"><b>Return Date</b></label>
              <input type="string" class="form-control" name="retdate"  placeholder="DD/MM/YYYY" required="true">
            </div>
          </div>
      <br><br>
      <%if(newListItems.length==0){%>
        <h3>OOPS! Currently No vehicles Available</h3>
      <%}else{%>
    <div class="container">
    <div class="row">
      <% for(var i=0;i<newListItems.length;i++){ %>
                   <div class="col-md-3 border text-center">
                     <img style="max-height:300px;max-width:300px" src="/upload/<%=newListItems[i].image%>"><br>
                    <b><span style="font-size: large;color:brown">ModelName </span>: <%=newListItems[i].modelName%></b><br>
                    <b><span style="font-size: large;color:brown">Car Year</span> : <%=newListItems[i].carYear%></b><br>
                    <b><span style="font-size: large;color:brown">Car Number</span> : <%=newListItems[i].carNo%></b><br>
                    <b><span style="font-size: large;color:brown">Car Transmission</span> : <%=newListItems[i].carTrans%></b><br>
                    <b><span style="font-size: large;color:brown">Car Price per Day</span> : <%=newListItems[i].carRate%></b><br><br>
                      <button type="submit" name="click" class="btn-red"  value="<%=newListItems[i]._id%>">Select</button></td>
                    </form>
                </div>
                <%}}%>
    </div>
  </div>
  
<br><br><br>
 <% if(previousBookings.length==0){%>
  <h4>OOPS!! You Have No Previous Bookings.</h4>
 <% }else{%>
 
  <h1 id="#previousBooking" class="border heading">Your Previous Bookings</h1>
  <br>
  <div class="box">
    <table class="table">
    <thead class="table-head">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Booking Number</th>
        <th scope="col">Name</th>
        <th scope="col">Adress</th>
        <th scope="col">Contact Number</th>
        <th scope="col">Model Name</th>
        <th scope="col">Car Number</th>
        <th scope="col">Arrival Date</th>
        <th scope="col">Return Date</th>
        <th scope="col">Total price</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
  
    <% for(var i=0;i<previousBookings.length;i++){ %>
      <div class="item">
              <tbody>
                <tr>
                  <th scope="row"><%=i+1%></th>
                  <td><b><%=previousBookings[i].bookingNumber%></b></td>
                  <td><b><%=previousBookings[i].userName%></b></td>
                  <td><b><%=previousBookings[i].userAddress%></b></td>
                  <td><b><%=previousBookings[i].userPhonenumber%></b></td>
                  <td><b><%=previousBookings[i].modelName%></b></td>
                  <td><b><%=previousBookings[i].carNumber%></b></td>
                  <td><b><%=previousBookings[i].arrivalDate%></b></td>
                  <td><b><%=previousBookings[i].returnDate%></b></td>
                  <td><b><%=previousBookings[i].totPrice%></b></td>
                  <td><b><%=previousBookings[i].status%></b></td>
                </tr>
           
             
    </div>
<%} %>
</table>
</div>
 <% }%>
<br><br>
  <h3 style="color:#4C0027">Share Your experience</h3>
<form class="text-start" action="/review" method="post">
    <div class="form-group">
<div class="mb-3">
    <label for="" class=""><b>Review</b></label> 
    <textarea name="reviewBody" class="form-control input-boder" cols="5" rows="4" placeholder="Enter your review"></textarea>
</div>
</div>
<button type="submit" class="btn-red" name="review" value="<%=user%>">Publish</button>
</form>

<br><br>

<h3 style="color:#4C0027">Post Your Queries</h3>
<form class="text-start" action="/query" method="post">
  <div class="form-group">
<div class="mb-3">
  <label for="" class=""><b>Query</b></label> 
  <textarea name="queryBody" class="form-control" cols="5" rows="2" placeholder="Enter your query"></textarea>
</div>
</div>
<button type="submit" class="btn-red" name="query" value="<%=user%>">Submit</button>
</form>
<br><br>
   <form action="/logout" method="post">
     <button type="submit" name="signout"  class="signout btn btn-danger">Sign Out</button>   
    </form>      
    </div>
 </div>
<br><br>
    </body>
</html>
<script src="/script.js"></script>
